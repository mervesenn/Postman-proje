	"item": [
		{
			"name": "Trello Pano Oluşturma",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"\r",
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"let response = pm.response.json();\r",
							"\r",
							"pm.test(\"Trello değer kontrolü\", function(){\r",
							"    pm.expect(response.name).is.eql(pm.environment.get(\"panoAdı\"))\r",
							"    pm.expect(response.closed).to.be.false\r",
							"})\r",
							"\r",
							"pm.test(\"Trello Pano Oluşturma hideVotes alanı false olmalı\", function(){\r",
							"    pm.expect(response.prefs.hideVotes).to.be.false\r",
							"})\r",
							"\r",
							"pm.environment.set(\"panoId\",response.id);\r",
							"\r",
							""
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.environment.set(\"panoAdı\",\"UdemyTrelloTest\" + parseInt(Math.random()*100000))"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/1/boards/?key={{trelloKey}}&token={{trelloToken}}&name={{panoAdı}}",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"1",
						"boards",
						""
					],
					"query": [
						{
							"key": "key",
							"value": "{{trelloKey}}"
						},
						{
							"key": "token",
							"value": "{{trelloToken}}"
						},
						{
							"key": "name",
							"value": "{{panoAdı}}"
						}
					]
				}
			},
			"response": []
